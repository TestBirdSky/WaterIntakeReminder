<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_man"
        android:layout_width="99dp"
        android:layout_height="5dp"
        android:layout_marginTop="115dp"
        android:layout_marginEnd="105dp"
        android:background="#FCA05D"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_woman"
        android:layout_width="99dp"
        android:layout_height="5dp"
        android:layout_marginHorizontal="6dp"
        android:background="#33000000"
        app:layout_constraintLeft_toRightOf="@id/iv_man"
        app:layout_constraintTop_toTopOf="@id/iv_man" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:gravity="center"
        android:text="@string/tv_gender_tips"
        android:textColor="#1C274C"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/iv_man" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/gender_iv_man"
        android:layout_width="144dp"
        android:layout_height="159dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="148dp"
        android:background="@drawable/bg_unselected"
        android:padding="2dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_gender_man"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv1" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/gender_iv_woman"
        android:layout_width="144dp"
        android:layout_height="159dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/bg_unselected"
        android:padding="2dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_gender_woman"
        app:layout_constraintLeft_toRightOf="@id/gender_iv_man"
        app:layout_constraintTop_toBottomOf="@id/tv1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_next"
        android:layout_width="246dp"
        android:layout_height="56dp"
        android:layout_marginBottom="89dp"
        android:background="@drawable/bg_btn_unenable"
        android:enabled="false"
        android:gravity="center"
        android:text="@string/next"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>