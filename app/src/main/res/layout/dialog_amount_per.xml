<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="308dp"
        android:layout_height="257dp"
        android:background="@drawable/bg_dialog"
        android:paddingHorizontal="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="Amount Per Track"
            android:textColor="#1C274C"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#F7F7F7"
            app:layout_constraintBottom_toTopOf="@id/tv_cancel" />

        <View
            android:id="@+id/view_div"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:background="#F7F7F7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_cancel" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_cancel"
            android:layout_width="127dp"
            android:layout_height="56dp"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="#C2C2C2"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_confirm"
            android:layout_width="127dp"
            android:layout_height="56dp"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="#4AA8F6"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_cur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@color/white"
            android:gravity="center"
            android:textColor="#FF9A34"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            tools:text="450" />

        <View
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:background="#FF9A34"
            app:layout_constraintLeft_toLeftOf="@id/tv_cur"
            app:layout_constraintRight_toRightOf="@id/tv_cur"
            app:layout_constraintTop_toBottomOf="@id/tv_cur" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:text="ml"
            android:textColor="#757B90"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/tv_cur"
            app:layout_constraintLeft_toRightOf="@id/tv_cur" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/choice_line1"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tv_cur">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_200"
                android:layout_width="67dp"
                android:layout_height="34dp"
                android:background="@drawable/bg_unselected"
                android:gravity="center"
                android:text="200"
                android:textColor="@color/color_b2c1ca"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_250"
                android:layout_width="67dp"
                android:layout_height="34dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/bg_unselected"
                android:gravity="center"
                android:text="250"
                android:textColor="#B2C1CA"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_300"
                android:layout_width="67dp"
                android:layout_height="34dp"
                android:background="@drawable/bg_unselected"
                android:gravity="center"
                android:text="300"
                android:textColor="#B2C1CA"
                android:textSize="15sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/choice_line2"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/choice_line1">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_350"
                android:layout_width="67dp"
                android:layout_height="34dp"
                android:background="@drawable/bg_unselected"
                android:gravity="center"
                android:text="350"
                android:textColor="#B2C1CA"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_400"
                android:layout_width="67dp"
                android:layout_height="34dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/bg_unselected"
                android:gravity="center"
                android:text="400"
                android:textColor="#B2C1CA"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_450"
                android:layout_width="67dp"
                android:layout_height="34dp"
                android:background="@drawable/bg_unselected"
                android:gravity="center"
                android:text="450"
                android:textColor="#B2C1CA"
                android:textSize="15sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>